<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="src.client.presentation.tutorial.InstructionScreenController">
    <center>
        <!-- Main container for game guide -->
        <StackPane prefHeight="600.0" prefWidth="900.0">
            <!-- Scrollable area for the instructions -->
            <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background-color: transparent;">
                <content>
                    <!-- Dark overlay with game instructions -->
                    <VBox alignment="CENTER" prefWidth="850.0" spacing="20.0" style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #2e4a2c, #0f3057); -fx-padding: 20;">
                        <Label style="-fx-font-family: 'Sans-serif'; -fx-font-size: 28px; -fx-font-weight: bold;" text="Game Instructions for the Crossword Puzzle" textFill="white" wrapText="true" />

                        <!-- Game instructions with sections aligned left -->
                        <VBox alignment="TOP_LEFT" minHeight="-Infinity" spacing="15.0">

                            <!-- Section 1 -->
                            <HBox alignment="TOP_LEFT" spacing="10.0">
                                <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-font-family: 'Sans-serif';" text="1." textFill="white" />
                                <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-font-family: 'Sans-serif';" text="Mục tiêu trò chơi" textFill="white" />
                            </HBox>
                            <Label maxWidth="800.0" style="-fx-font-size: 16px; -fx-font-family: 'Sans-serif';" text="Người chơi cần đoán các chữ cái để hoàn thành từ vựng trong bảng ô chữ. Người chơi có thể giành điểm bằng cách đoán đúng chữ cái nhanh nhất hoặc hoàn thành cột dọc đi qua 10 từ vựng." textFill="white" wrapText="true" />

                            <!-- Section 2 -->
                            <HBox alignment="TOP_LEFT" spacing="10.0">
                                <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-font-family: 'Sans-serif';" text="2." textFill="white" />
                                <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-font-family: 'Sans-serif';" text="Bảng ô chữ" textFill="white" />
                            </HBox>
                            <Label maxWidth="800.0" style="-fx-font-size: 16px; -fx-font-family: 'Sans-serif';" text="Trò chơi sẽ cung cấp một bảng ô chữ gồm 10 dòng tương ứng với 10 từ vựng cần đoán. Mỗi từ sẽ bao gồm các chữ cái đã được ẩn và một số chữ cái gợi ý đã được hiển thị." textFill="white" wrapText="true" />

                            <!-- Section 3 -->
                            <HBox alignment="TOP_LEFT" spacing="10.0">
                                <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-font-family: 'Sans-serif';" text="3." textFill="white" />
                                <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-font-family: 'Sans-serif';" text="Cách chơi" textFill="white" />
                            </HBox>
                            <Label maxWidth="800.0" style="-fx-font-size: 16px; -fx-font-family: 'Sans-serif';" text="Lựa chọn chữ cái: Người chơi sẽ sử dụng các chữ cái được hệ thống cung cấp sẵn để điền vào các ô trống trong bảng ô chữ. Thời gian giới hạn: Mỗi vòng chơi, cả hai người chơi sẽ có 30 giây để đoán các chữ cái. Nếu một trong hai người chơi hoàn thành trước khi hết thời gian, hoặc thời gian kết thúc, trò chơi sẽ chuyển sang vòng tiếp theo." textFill="white" wrapText="true" />

                            <!-- Section 4 -->
                            <HBox alignment="TOP_LEFT" spacing="10.0">
                                <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-font-family: 'Sans-serif';" text="4." textFill="white" />
                                <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-font-family: 'Sans-serif';" text="Tính điểm" textFill="white" />
                            </HBox>
                            <Label maxWidth="800.0" prefWidth="800.0" style="-fx-font-size: 16px; -fx-font-family: 'Sans-serif';" text="Người chơi sẽ được cộng điểm như sau: 3 điểm: Người chơi đoán đúng chữ cái nhanh nhất. 1 điểm: Nếu cả hai người chơi đoán đúng cùng lúc, cả hai sẽ nhận được 1 điểm. 0 điểm: Nếu đoán sai, người chơi sẽ không nhận được điểm nào." textFill="white" wrapText="true" />

                            <!-- Section 5 -->
                            <HBox alignment="TOP_LEFT" spacing="10.0">
                                <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-font-family: 'Sans-serif';" text="5." textFill="white" />
                                <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-font-family: 'Sans-serif';" text="Kết thúc trò chơi" textFill="white" />
                            </HBox>
                            <Label maxWidth="800.0" style="-fx-font-size: 16px; -fx-font-family: 'Sans-serif';" text="Trò chơi sẽ kết thúc khi: Cả hai người chơi hoàn thành 10 câu. Hoặc một người chơi đoán đúng từ hoặc cụm từ trong cột dọc đi qua 10 từ vựng. Sau khi kết thúc, người chơi có điểm cao hơn sẽ là người chiến thắng. Nếu hai người chơi có cùng điểm, trò chơi sẽ tính là hòa." textFill="white" wrapText="true" />

                        </VBox>

                        <!-- Exit button centered at the bottom -->
                        <Button fx:id="exitButton" onAction="#exitInstruction" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #4a7c59; -fx-border-color: white; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 30px;" text="Exit">
                            <VBox.margin>
                                <Insets bottom="30.0" top="30.0" />
                            </VBox.margin>
                        </Button>
                    </VBox>
                </content>
            </ScrollPane>
        </StackPane>
    </center>
</BorderPane>
